<div class="form-group col-4 mx-auto my-2 w-25 border p-3 bg-dark bg-gradient text-white bg-opacity-75">
    <form action="login" method="post"> 
        <fieldset>
            <div class="d-flex justify-content-center mx-auto">
                <img src='../../../src/images/LogoACME.jpg' width="150px" height="80px" class="my-1 mx-auto">
            </div>
            <label for="username">User Name</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Username" required>
            <br>
            <label for="thumbnail">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
            <br>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary mx-auto">Login <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                <button type="reset" class="btn btn-danger mx-auto">Reset <i class="fa fa-refresh" aria-hidden="true"></i></button>
            </div>
        </fieldset>
    </form>
</div>